<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="config.mybatis.mapper.oracle.peopleinfo">
	<select id="selectCareer" parameterType="map" resultMap="resumeVo">	
	select workterm,workterm2,trunc(months_between(workterm2,workterm)/12,0>2) as "term" from career
	<if test="term != null">
				and term IN 
				<foreach collection="term1" item="term" 
					index="index" open="(" close=")" separator=",">
				#{term}
				</foreach>
				</if>	
	</select>
</mapper>









